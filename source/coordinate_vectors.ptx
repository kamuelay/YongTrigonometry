              \draw [decorate,decoration={brace,amplitude=10pt},xshift=0.4pt,yshift=-2cm](1,11) -- (10,11) node[black,midway,yshift=0.6cm] { \(9\)};
              \draw [decorate,decoration={brace,amplitude=10pt},xshift=-0.4pt,yshift=0.4pt](0,1) -- (0,8) node[black,midway,xshift=-0.6cm] { \(7\)};
              \draw [decorate,decoration={brace,amplitude=10pt,mirror},xshift=-0.4pt,yshift=0.4pt](11,1) -- (11,2) node[black,midway,xshift=0.6cm] { \(1\)};
              \draw [decorate,decoration={brace,amplitude=10pt,mirror},xshift=-0.4pt,yshift=0.4pt](11,2) -- (11,8) node[black,midway,xshift=0.6cm] { \(6\)};
