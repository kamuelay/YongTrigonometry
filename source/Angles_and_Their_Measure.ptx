\NewLatitudePlane[planeP]{\R}{\angEl}{21.4666666667}
\path[planeP] (-120:\R) coordinate (P);
\draw[left] node at (P){Moloka`i};
\node[right] at (21.4666666667:\R) {\(21^{\circ}08'\)N};
\node[right] at (1.75:\R) {\(1^{\circ}45'\)N};
\node[right] at (-1.9,-2.5) {\(157^{\circ}12'\)W};
