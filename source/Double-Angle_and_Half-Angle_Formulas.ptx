              \begin{tikzpicture}[scale=7]
              \draw[line width=2pt,-stealth] (0,0) -- (67.5:1.2) node[midway,sloped,above] {120 NM};
              \draw[dashed] (0,0) -- ({1.2*cos(67.5)},0) node[midway,below,yshift=-0.1] {reference course};
              \draw[dashed] ({1.2*cos(67.5)},0) -- (67.5:1.2) node[pos=0.5,right,xshift=0.1] {deviation};
              \draw ([shift=(67.5:-0.1)]0,0) pic {waa-top={waacolor}{{-90+67.5}}{0.1}};
              \draw ([shift=(0:0.15)]0,0) arc (0:67.5:0.15) node[midway,right,xshift=-8,yshift=10] {6 Houses=$67.5^{\circ}$};
              \draw ({1.2*cos(67.5)-0.04},0) -- ({1.2*cos(67.5)-0.04},0.04) -- ({1.2*cos(67.5)},0.04);
              \end{tikzpicture}
            </latex-image>
          </image>
        </statement>
        <answer>
          <p>
            <m>60\sqrt{2+\sqrt{2}}</m>
          </p>
        </answer>
      </exercise>
