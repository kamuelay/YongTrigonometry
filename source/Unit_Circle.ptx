            \draw[line width=2pt] (0,0) -- (0.866025403784,0) node[midway,below,yshift=-0.1] {\(\frac{\sqrt{3}}{2}\)};
            \draw[line width=2pt] (0.866025403784,0) -- (0.866025403784,0.5) node[midway,right,yshift=-0.2] {\(\frac{1}{2}\)};
            \filldraw[black] (30:1) circle(0.5pt) node[left,xshift=-7,yshift=3] {\(P(x,y)=P\left(\frac{\sqrt{3}}{2},\frac{1}{2}\right)\)};
