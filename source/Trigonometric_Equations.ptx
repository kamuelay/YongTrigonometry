    <exercisegroup cols="2">
      <introduction>
        <p>
          Solve each equation on the interval <m>0\leq\theta\lt2\pi</m>
        </p>
      </introduction>
      <exercise>
        <statement>
          <p>
            <m>\sin\theta=\frac{\sqrt{3}}{2}</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{\pi}{3}</m>, <m>\frac{2\pi}{3}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\cos\theta=\frac{\sqrt{2}}{2}</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{\pi}{4}</m>, <m>\frac{7\pi}{4}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\tan\theta=-1</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{3\pi}{4}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\csc\theta=2</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{\pi}{6}</m>, <m>\frac{5\pi}{6}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\sec\theta=-2</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{2\pi}{3}</m>, <m>\frac{4\pi}{3}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\cot\theta=-\sqrt{3}</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{5\pi}{6}</m>, <m>\frac{11\pi}{6}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>2\sin\theta+1=0</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{7\pi}{6}</m>, <m>\frac{11\pi}{6}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>6\cos\theta+1=-2</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{2\pi}{3}</m>, <m>\frac{4\pi}{3}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>2\tan\theta+2\sqrt{3}=0</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{2\pi}{3}</m>, <m>\frac{5\pi}{3}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\csc\theta+\sqrt{2}=0</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{5\pi}{4}</m>, <m>\frac{7\pi}{4}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>\sec\theta-\sqrt{2}=0</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{\pi}{4}</m>, <m>\frac{7\pi}{4}</m>
          </p>
        </answer>
      </exercise>
      <exercise>
        <statement>
          <p>
            <m>2\cot\theta+8=6</m>
          </p>
        </statement>
        <answer>
          <p>
            <m>\frac{3\pi}{4}</m>
          </p>
        </answer>
      </exercise>
    </exercisegroup>

