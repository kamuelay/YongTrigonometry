              \addplot[stealth-stealth,domain=-3*pi/2+0.2:-pi/2-0.2,samples=200,red,line width=1pt]{1/sin(deg(x-pi/2))+2};
              \addplot[stealth-stealth,domain=-pi/2+0.145:pi/2-0.145,samples=200,red,line width=1pt]{1/sin(deg(x-pi/2))+2};
