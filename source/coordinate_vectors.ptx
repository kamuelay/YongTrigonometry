            \draw[line width=1pt,blue,-stealth]([shift=(175:4.5)]0,0) -- ([shift=(175:4.5)]190:1);
            \draw[line width=1pt,blue,-stealth]([shift=(190:5)]0,0) -- ([shift=(190:5)]190:1);
            \draw[line width=1pt,blue,-stealth]([shift=(190:1)]0,0) -- ([shift=(190:1)]190:1);
            \draw[line width=1pt,blue,-stealth]([shift=(200:3)]0,0) -- ([shift=(200:3)]190:1);
